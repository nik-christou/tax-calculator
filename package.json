{
  "name": "tax-calculator",
  "version": "v2.0.0",
  "description": "Salary Tax Calculator for multiple countries",
  "author": "Nikolas Christou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/tax-calculator"
  },
  "scripts": {
    "vite:dev": "vite dev",
    "vite:dev:network": "vite dev --host",
    "vite:build": "vite build",
    "https:dist": "http-server ./dist --tls --cert ./cert/127.0.0.1.pem --key ./cert/127.0.0.1-key.pem",
    "cert": "rm -rf .cert && mkdir -p .cert && mkcert -key-file ./.cert/key.pem -cert-file ./.cert/cert.pem 'localhost'",
    "tests": "web-test-runner ./test/**/*.test.js --node-resolve; exit 0",
    "tests:watch": "web-test-runner test/**/*.test.js --node-resolve --watch; exit 0",
    "tests:coverage": "web-test-runner test/**/*.test.js --node-resolve --coverage; exit 0"
  },
  "dependencies": {
    "@twbs-css/template-literals": "1.0.2",
    "@vaadin/router": "1.7.4",
    "lit": "2.5.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/testing": "3.1.7",
    "@web/test-runner": "0.15.0",
    "http-server": "14.1.1",
    "sinon": "15.0.1",
    "vite": "4.0.1",
    "vite-plugin-pwa": "0.14.0",
    "workbox-window": "6.5.4"
  }
}
