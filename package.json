{
  "name": "tax-calculator",
  "version": "v1.0.0",
  "description": "Salary Tax Calculator for multiple countries",
  "author": "Nikolas Christou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/tax-calculator"
  },
  "scripts": {
    "snowpack": "snowpack install",
    "serve": "es-dev-server --config ./es-dev-server.config.js",
    "serve:network": "es-dev-server --hostname 192.168.0.10 --config ./es-dev-server.config.js",
    "serve:watch": "es-dev-server --node-resolve --app-index index.html --watch",
    "lint:prettier": "prettier \"./src/**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./src/**/*.js\" --tab-width 4 --print-width 150 --write",
    "tests": "wtr ./test/**/*.test.js; exit 0",
    "tests:coverage": "wtr test/**/*.test.js --coverage; exit 0",
    "tests:watch": "wtr test/**/*.test.js --watch; exit 0",
    "tests:browsers": "wtr test/**/*.test.js --playwright --browsers chromium firefox webkit; exit 0",
    "build:sw:gen": "workbox generateSW workbox.config.js",
    "build:sw:copy": "workbox copyLibraries ./dist/web_assets",
    "build:clean": "rimraf dist && mkdir -p ./dist",
    "build:genDeps": "npx snowpack -optimize --dest ./dist/web_modules/",
    "build:copyAssets": "cp -r ./web_assets ./dist",
    "build:copyIndex": "html-minifier -o ./dist/index.html --config-file ./minify.config.json index.html",
    "build:compile": "npx babel src --out-dir ./dist/src",
    "build": "npm run build:clean && npm run build:genDeps && npm run build:copyAssets && npm run build:compile && npm run build:copyIndex && npm run build:sw:copy && npm run build:sw:gen"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.2",
    "blueprint-css": "^3.1.1",
    "idb": "^5.0.4",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "normalize.css": "^8.0.1",
    "workbox-window": "^5.1.3",
    "es-module-shims": "^0.4.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-modules": "^0.1.3",
    "@open-wc/testing": "^2.5.18",
    "@web/test-runner": "^0.5.22",
    "axe-core": "^3.5.5",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "babel-preset-minify": "^0.5.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.56.0",
    "html-minifier": "^4.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "snowpack": "^2.6.3",
    "web-component-analyzer": "^1.0.3",
    "workbox-cli": "^5.1.3",
    "sinon": "^9.0.2"
  },
  "snowpack": {
    "install": [
      "lit-element",
      "lit-html",
      "workbox-window",
      "@vaadin/router",
      "idb/build/esm/index.js",
      "normalize.css/normalize.css",
      "blueprint-css/dist/blueprint.min.css"
    ],
    "installOptions": {
      "dest": "web_modules",
      "rollup": {
        "rollup.dedupe": [
          "lit-element",
          "lit-html"
        ]
      }
    }
  },
  "babel": {
    "presets": [
      [
        "minify",
        {
          "builtIns": false,
          "evaluate": false,
          "mangle": false
        }
      ],
      "@babel/preset-modules"
    ],
    "plugins": [
      [
        "template-html-minifier",
        {
          "modules": {
            "lit-html": [
              "html"
            ],
            "lit-element": [
              "html",
              {
                "name": "css",
                "encapsulation": "style"
              }
            ]
          },
          "strictCSS": true,
          "htmlMinifier": {
            "collapseWhitespace": true,
            "conservativeCollapse": true,
            "removeComments": true,
            "caseSensitive": true
          }
        }
      ]
    ]
  }
}
