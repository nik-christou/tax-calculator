{
  "name": "tax-calculator",
  "version": "v1.0.0",
  "description": "Salary Tax Calculator for multiple countries",
  "author": "Nikolas Christou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/tax-calculator"
  },
  "scripts": {
    "snowpack:install": "snowpack install --config ./snowpack.config.js --reload",
    "snowpack:serve": "snowpack dev --config ./snowpack.config.js --clean --reload",
    "snowpack:serve:watch": "snowpack dev --config ./snowpack.config.js --hmr",
    "snowpack:build": "snowpack build --config ./snowpack.config.js",
    "wds:serve": "web-dev-server --config ./web-dev-server.config.mjs",
    "wds:serve:dist": "web-dev-server --config ./web-dev-server.dist.config.mjs",
    "lint:standard": "npx standardx ./public/src/**/*.js; exit 0",
    "format:standard": "npx standardx --fix ./public/src/**/*.js ; exit 0",
    "tests": "web-test-runner ./test/**/*.test.js --node-resolve; exit 0",
    "tests:watch": "web-test-runner test/**/*.test.js --node-resolve --watch; exit 0",
    "tests:coverage": "web-test-runner test/**/*.test.js --node-resolve --coverage; exit 0",
    "tests:browsers": "web-test-runner test/**/*.test.js --playwright --browsers chromium firefox webkit; exit 0",
    "sw:gen": "workbox generateSW ./workbox.config.js",
    "sw:copy": "workbox copyLibraries ./dist/web_assets",
    "build": "npm run snowpack:build && npm run sw:copy && npm run sw:gen"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.2",
    "idb": "^5.0.8",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "normalize.css": "^8.0.1",
    "systemjs": "^6.8.3",
    "workbox-window": "^6.0.2"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.1.5",
    "@open-wc/testing": "^2.5.32",
    "@snowpack/plugin-optimize": "^0.2.10",
    "@web/dev-server": "^0.1.3",
    "@web/test-runner": "^0.11.7",
    "sinon": "^9.2.2",
    "snowpack": "^2.18.5",
    "standardx": "^7.0.0",
    "workbox-cli": "^6.0.2"
  }
}
