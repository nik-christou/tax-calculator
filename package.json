{
  "name": "tax-calculator",
  "version": "0.0.1",
  "description": "Income tax calculator for multiple countries",
  "author": "Nikolas Christou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nik-christou/tax-calculator"
  },
  "scripts": {
    "serve": "es-dev-server --config ./es-dev-server.config.js",
    "serve:watch": "es-dev-server --node-resolve --app-index index.html --watch",
    "snowpack": "npx snowpack --clean",
    "lint:prettier": "prettier \"./src/**/*.js\" --tab-width 4 --list-different",
    "format:prettier": "prettier \"./src/**/*.js\" --tab-width 4 --print-width 150 --write",
    "test": "karma start; exit 0",
    "test:coverage": "karma start --coverage; exit 0",
    "test:watch": "karma start --auto-watch=true --single-run=false; exit 0",
    "test:watch:coverage": "karma start --auto-watch=true --single-run=false --coverage; exit 0",
    "build:sw:gen": "workbox generateSW workbox.config.js",
    "build:sw:copy": "workbox copyLibraries ./dist/web_assets",
    "build:clean": "rimraf dist && mkdir -p ./dist",
    "build:genDeps": "npx snowpack -optimize --dest ./dist/web_modules/",
    "build:copyAssets": "cp -r ./web_assets ./dist",
    "build:copyIndex": "html-minifier -o ./dist/index.html --config-file ./minify.config.json index.html",
    "build:compile": "npx babel src --out-dir ./dist/src",
    "build": "npm run build:clean && npm run build:genDeps && npm run build:copyAssets && npm run build:compile && npm run build:copyIndex && npm run build:sw:copy && npm run build:sw:gen"
  },
  "dependencies": {
    "blueprint-css": "^3.1.1",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2",
    "normalize.css": "^8.0.1",
    "workbox-window": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-modules": "^0.1.3",
    "@open-wc/karma-esm": "^2.13.9",
    "@open-wc/testing": "^2.5.4",
    "babel-plugin-template-html-minifier": "^4.0.0",
    "babel-preset-minify": "^0.5.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.40.0",
    "html-minifier": "^4.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "snowpack": "^1.4.0",
    "web-component-analyzer": "^1.0.3",
    "workbox-cli": "^5.0.0",
    "mocha": "^7.0.1",
    "axe-core": "^3.5.1",
    "chai": "^4.2.0",
    "sinon": "^9.0.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5"
  },
  "snowpack": {
    "webDependencies": [
      "lit-element",
      "lit-html",
      "workbox-window",
      "normalize.css/normalize.css",
      "blueprint-css/dist/blueprint.min.css"
    ],
    "dedupe": [
      "lit-element",
      "lit-html"
    ]
  },
  "babel": {
    "presets": [
      "minify",
      "@babel/preset-modules"
    ],
    "plugins": [
      [
        "template-html-minifier",
        {
          "modules": {
            "lit-html": [
              "html"
            ],
            "lit-element": [
              "html",
              {
                "name": "css",
                "encapsulation": "style"
              }
            ]
          },
          "strictCSS": true,
          "htmlMinifier": {
            "collapseWhitespace": true,
            "conservativeCollapse": true,
            "removeComments": true,
            "caseSensitive": true
          }
        }
      ]
    ]
  }
}
