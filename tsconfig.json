{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2018", "dom"],
      "allowJs": true,
      "checkJs": true,
      "noEmit": true
  },
  "include": ["src/**/*.js"],
  "exclude": [
    "dist",
    "node_modules",
    "**/node_modules/*",
    "web_assets",
    "web_modules",
    "web-dev-server.config.js"
  ]
}
